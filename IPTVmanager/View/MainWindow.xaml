        <Button Content="Фильтр Избр" Command="{Binding key_FilterOnlyBESTCommand}"    CommandParameter=""  Margin="0,96,10,0" Focusable="False" Width="89" Height="25" HorizontalAlignment="Right" VerticalAlignment="Top" BorderBrush="#FF1BAC14" OpacityMask="#FF990E0E" Grid.Column="3" Click="Button_Click_3">
