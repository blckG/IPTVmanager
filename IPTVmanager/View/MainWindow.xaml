            </Button.Foreground>
        </Button>
        <Button Content="ВСЁ кроме ИЗБР" Command="{Binding key_DelALLkromeBESTCommand}"   CommandParameter=""  Margin="447,0,0,3" Focusable="False" Height="25" VerticalAlignment="Bottom" BorderBrush="#FF1BAC14" OpacityMask="#FF990E0E" Grid.Column="3" Click="Button_Click_4" HorizontalAlignment="Left" Width="111">
            <Button.Background>
