<Window x:Name="win" x:Class="IPTVman.ViewModel.Player"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:vm="clr-namespace:IPTVman.ViewModel" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="nvlc player " Height="564" Width="700" Closing="Window_Closing" Closed="Window_Closed" TouchEnter="win_TouchEnter" MouseEnter="win_MouseEnter">

    <Window.Resources>
        <!-- <vm:ViewModelMain x:Key="ViewModelMain"/> -->
    </Window.Resources>
    <Window.InputBindings>
        <KeyBinding Command="{Binding key_kt}" Key="T"/>
    </Window.InputBindings>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="132*"/>
            <ColumnDefinition Width="81*"/>
            <ColumnDefinition Width="479*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="#FF00003E" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Button Height="11" Name="bMUTE" Width="124" Click="button5_Click" FontSize="8" Foreground="#FFABB82A" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="0">
            <Button.Background>
                <RadialGradientBrush GradientOrigin="0.5,0">
                    <GradientStop Color="Black" Offset="1"/>
                    <GradientStop Color="#FFB43535" Offset="0.082"/>
                </RadialGradientBrush>
            </Button.Background> Mute
        </Button>

        <my:WindowsFormsHost Name="windowsFormsHost1" xmlns:my="clr-namespace:System.Windows.Forms.Integration;assembly=WindowsFormsIntegration" Margin="0,0,0,11" TouchEnter="windowsFormsHost1_TouchEnter" Grid.ColumnSpan="3" />

        <Slider Height="11" Margin="3,0,15,0" Name="slider2" ValueChanged="slider2_ValueChanged" Maximum="100" RenderTransformOrigin="0.497,-0.458" BorderBrush="#FF1A8D44" Foreground="#FF682B2B" OpacityMask="#FF0D6E58" FontSize="9" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Bottom" VerticalAlignment="Bottom" Grid.Column="1" Grid.ColumnSpan="2" >
            <Slider.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF6B40A8" Offset="1"/>
                </LinearGradientBrush>
            </Slider.Background>
        </Slider>


    </Grid>
</Window>
